<Window x:Class="TrafficLight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrafficLight"
        mc:Ignorable="d"
        FocusManager.FocusedElement="{Binding ElementName=lightCanvas}"
        Title="MainWindow" Height="450" Width="800">
    <Canvas x:Name="lightCanvas" Background="Black" Focusable="True">
        <Button Content="Start" Name="Start" HorizontalAlignment="Left" Click="Start_Click" VerticalAlignment="Top" Width="99" Canvas.Left="538" Canvas.Top="120" Height="36"/>
        
        
        

    </Canvas>
</Window>
